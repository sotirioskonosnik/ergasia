		private void save(String textField ,String textField_1 ,String textField_2,String action){
			/*
			 * apothikeuei ta stoixia i tis allages sthn vash kai emfanizei ta katallhla minimata
			 */
			String query;
			if(action.equals("insert"))
				query="insert into odigoi(onoma,eponimo,username,password,oxima) values(?,?,?,?,?)";
			else
				query="update odigoi set onoma=?, eponimo=? , username=?,password=?,oxima=? WHERE id=?";
			try {
				con.pS=con.conn.prepareStatement(query);
				con.pS.setString(1, textField);
				con.pS.setString(2, textField_1);
				con.pS.setString(3, textField_2)
				if(action.equals("update"))
					con.pS.setInt(6, id);
			} catch (SQLException e) {
				e.printStackTrace();
			}
			if(con.makeQuery(query)){
				JOptionPane.showMessageDialog(null, "Αποθηκεύτηκε!");
				if(id!=0)
					dispose();
				else{
					name.setText("");
					surname.setText("");
					username.setText("");
					pass.setText("");
					pass2.setText("");
				}
			}else{
				JOptionPane.showMessageDialog(null, "Κάτι πήγε στραβά παρακαλώ δοκιμάστε αργότερα!");
			}
				
			
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
